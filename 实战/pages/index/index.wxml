<!--index.wxml-->
<view class="container">
  <view class='section'>
    <swiper indicator-dots="true"
      autoplay interval="3000" duration="1000">
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image"/>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class='section'>
    <view class='section-title'>
      <text class='title-1'>那年冬天</text>
      <text class='title-2'>精品推荐</text>
    </view>
    <view class='section-content'>
      <view class='picitem' wx:for="{{content}}">
        <image src='{{item.src}}' ></image>
        <view class='picitem-text'>
          <text>{{item.text}}</text>
        </view>
      </view>
    </view>
  </view>

  <view class='section'>
  
  </view>

</view>
