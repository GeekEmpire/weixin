.container{
  width: 100vw;
  height: auto;
  margin: 0 auto;
  /* border: 1px solid #000; */
  /* position: fixed; */
}
.heading{
  width: 100vw;
  height: auto;
  /* border-left: 1px solid black; */
}
.h-search,.h-bt{
  width: 100vw;
  height: 10vw;
  display: flex;
  flex-direction: row;
  line-height: 10vw;
}
.h-search input{
  border: 1px solid #000;
  height: 10vw;
  width: 80vw;
  border-radius: 5vw;
}
.h-bt view{
  width: 25vw;
  height: 10vw;
  text-align: center;
}
.h-bt text{
  width: 1px;
  height: 4vw;
  border-left: 2px solid #000;
  margin-top: 3vw;
}
.hs-sm{
  width: 10vw;
  height: 10vw;
}
.h-sw .slide-image{
  width: 100vw;
  height: 50vw;
}
.h-sw,.h-sw swiper{
  width: 100vw;
  height: 50vw;
}
.h-sw text{
  position: absolute;
  bottom: 1%;
  right: 3%;
  z-index: 2;
  color: rgb(26, 133, 44);
}
.line{
  height: 4vw;
  width: 96vw;
  margin: 0 auto;
  border-bottom: 2px solid #ccc;
}
.content{
  width: 100vw;
  height: auto;
  display: flex;
  flex-wrap: wrap;
}
.pm{
  width: 40vw;
  height: 40vw;
  margin-left: 6.5vw;
  margin-top: 3vw;
  margin-bottom: 3vw;
  /* border: 1px solid red; */
}
.pm image{
  width: 40vw;
  height: 30vw;
}
.pm text{
  display: block;
  width: 100%;
  height: 10vw;
  line-height: 10vw;
  border: 1px solid #000;
  text-align: center;
}